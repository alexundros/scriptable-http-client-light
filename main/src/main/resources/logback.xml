<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="${CONFIG_DEBUG:-false}">
  <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>
  <property name="DATE_FRM" value="yyyy-MM-dd HH:mm:ss.SSS"/>
  <property name="PATTERN" value="%d{${DATE_FRM}} %level [%thread] %logger{33}: %msg%n"/>
  <property name="LOG_FILE_NAME" value="${LOG_FILE_NAME:-main}"/>
  <include file="inc.logback.xml" optional="true"/>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${PATTERN}</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>
  <appender name="LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/${LOG_FILE_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>${PATTERN}</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>
  <root level="${ROOT_LEVEL:-INFO}">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="LOG_FILE"/>
  </root>
</configuration>